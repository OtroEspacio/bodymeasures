<%= form_for @customer do |f| %>
	
	<% if @customer.errors.any? %>
		<ul>
			<% @customer.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="col-md-6">
		<div class="form-group">
			<%= f.label :first_name %>
			<%= f.text_field :first_name, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :last_names %>
			<%= f.text_field :last_names, class: 'form-control' %>
		</div>
	</div>

	<div class="col-md-6">
		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :phone_number %>
			<%= f.text_field :phone_number, class: 'form-control' %>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="text-center">
				<h4>Medidas Corporales</h4>
			</div>
		</div>
		<div class="row">
			<%= f.fields_for :body_measures do |ff| %>
				<%= render 'body_measures/fields_for_measures', measure: ff %>
			<% end %>
		</div>
	</div>

	<div class="col-md-6">
		<div class="form-group">
			<%= f.submit @customer.new_record? ? 'Crear' : 'Actualizar', class: 'btn btn-success btn-lg' %>
		</div>
	</div>

<% end %>